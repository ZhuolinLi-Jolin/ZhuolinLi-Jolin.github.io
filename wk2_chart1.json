{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 400,
  "height": 300,
  "title": {"text": "CPI Over Time", "subtitle": "Source: FRED"},
  "description": "Consumer Price Index (CPI) over time.",
  "data": {
    "url": "https://raw.githubusercontent.com/ZhuolinLi-Jolin/ZhuolinLi-Jolin.github.io/refs/heads/main/CPIAUCSL_PC1.csv"
  },
  "mark": {
    "type": "area",
    "line": {
      "color": "darkgreen"
    },
    "color": {
      "x1": 1,
      "y1": 1,
      "x2": 1,
      "y2": 0,
      "gradient": "linear",
      "stops": [
        {
          "offset": 0,
          "color": "white"
        },
        {
          "offset": 1,
          "color": "darkgreen"
        }
      ]
    }
  },
  "encoding": {
    "x": {
      "field": "observation_date",
      "type": "temporal"
    },
    "y": {
      "field": "CPIAUCSL_PC1",
      "type": "quantitative"
    }
  }
}
